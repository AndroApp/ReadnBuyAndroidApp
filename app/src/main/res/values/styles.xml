<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/stack_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/stack_to_back</item>
        <item name="android:activityCloseEnterAnimation">@anim/stack_to_front</item>
        <item name="android:activityCloseExitAnimation">@anim/stack_right_out</item>
    </style>

    <style name="LoadingDialogStyle" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/buying</item>
        <item name="DialogSpotColor">?attr/colorAccent</item>
    </style>

    <style name="ArticleCardTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ArticleHeaderTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="LogInEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="LogInTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ProductTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:clickable">true</item>
    </style>

</resources>